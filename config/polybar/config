font-1 = FontAwesome:size=11;-1

modules-left = bspwm
;modules-center = 
modules-right = date powermenu

tray-position = right

wm-restack = bspwm

[bar/left]
monitor = HDMI-0
dock = false
width = 100%
height = 30
offset-x = 0
offset-y = 0

bottom = false

background = ${colors.bg}
foreground = ${colors.lgreen}

linecolor = #666

border-bottom = 1
border-bottom-color = #333

spacing = 1
lineheight = 2
padding-left = 0
padding-right = 2
module-margin-left = 2
module-margin-right = 2

font-0 = hack:size=10;1
font-1 = FontAwesome:size=11;-1

modules-left = bspwm
modules-center = cpu temp memory wired
modules-right = updates date

try-position = right

wm-restack = bspwm


[module/bspwm]
type = internal/bspwm

; ws-icon-[0-9]+ = label;icon
ws-icon-0 = desktop;
ws-icon-1 = browse;
ws-icon-2 = files;
ws-icon-3 = music;
ws-icon-4 = cli;
ws-icon-5 = code;
ws-icon-6 = android;
ws-icon-7 = gaming;
;ws-icon-8 = 8;
;ws-icon-9 = 9;
ws-icon-default = ♟

format = <label-state> <label-mode>

label-active = %index%: %icon%
label-active-background = #ee333333
label-active-underline= #cc333333
label-active-padding = 1

label-occupied = %index%: %icon%
label-occupied-padding = 1

label-urgent = %index%: %icon%
label-urgent-background = #e60053
label-urgent-padding = 1

label-empty = %index%: %icon%
label-empty-foreground = #666
label-empty-padding = 1


[module/date]
type = internal/date
label = %{F-} %date% %{F-} %time%
date = %A %d-%m-%Y
time = %H:%M
interval = 5


[module/volume]
type = internal/volume
;speaker-mixer = Speaker
;headphone-mixer = Headphone
;headphone-id = 28

mapping = true

format-volume = <ramp-volume><label-volume>

label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 
label-muted-foreground = ${colors.red}

ramp-volume-0 = 
ramp-volume-1 = 

ramp-headphones-0 = 
;ramp-headphones-1 = 


[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 0.5
format = <label> <ramp-coreload>
label = CPU %percentage%%

ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █


[module/memory]
type = internal/memory
interval = 3

format = <label>
