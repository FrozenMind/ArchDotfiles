[module/caffeine]
type = custom/script

exec = if [ $(xset q | grep -c 'DPMS is Enabled') -eq 1 ]; then echo ""; else echo ""; fi
interval = 3

format = <label>
format-foreground = ${colors.blue}

label = %output%

click-left = if [ $(xset q | grep -c 'DPMS is Enabled') -eq 1 ]; then xset -dpms; else xset +dpms; fi



