[module/caffeine]
type = custom/script

exec = if [ $(xset q | grep -c 'DPMS is Enabled') -eq 1 ]; then echo "Ôà∂"; else echo "ÔÉ¥"; fi
interval = 3

format = <label>
format-foreground = ${colors.lorange}

label = %output%

click-left = if [ $(xset q | grep -c 'DPMS is Enabled') -eq 1 ]; then xset -dpms; xset s off; else xset dpms 600 1800 1800; xset s on; fi


[module/backlight]
type = internal/xbacklight

; XRandR output to get get values from
; Default: the monitor defined for the running bar
output = eDP-1

; Create scroll handlers used to set the backlight value
; Default: true
enable-scroll = false

; Available tags:
;   <label> (default)
;   <ramp>
;   <bar>
format = <label>

; Available tokens:
;   %percentage% (default)
label = %percentage%%

; Only applies if <ramp> is used
ramp-0 = üåï
ramp-1 = üåî
ramp-2 = üåì
ramp-3 = üåí
ramp-4 = üåë

; Only applies if <bar> is used
bar-width = 10
bar-indicator = |
bar-fill = ‚îÄ
bar-empty = ‚îÄ


[module/music]
